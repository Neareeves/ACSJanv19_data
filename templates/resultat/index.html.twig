{% extends 'base.html.twig' %}

{% block title %}Prénoms d'avant{% endblock %}

{% block body %}
<style>
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="container-fluid">
	<div class="row bandeau">
		<h1>Prénoms d'avant</h1>
	</div>
</div>

<div class="example-wrapper">


	<h1></h1>
	<div class="lesTops">

		<div class="container résultat">
			<div class="row">
				<div class="col-md-6 col-sm-12">

					{% if topNom is defined %}
					<h3>Les cinq prénoms les plus utilisés en {{ annee }} sont :</h3>
					{% for item in topNom %}
					<a href="https://www.prenoms.com/prenom/{{item.nom}}.html">{{item.nom}}</a>
					<span class="bebe">({{item.nombre}} bébés)</span><br>
					{% endfor %}
				</div>

				<div class="col-md-6 col-sm-12">

					{% endif %}
					{% if noms is defined %}
					<h3>Les cinq prénoms les moins donnés en {{ annee }} sont :</h3>
					{% for item in noms %}
					<a href="https://www.prenoms.com/prenom/{{item.nom}}.html">{{item.nom}}</a>
					<span class="bebe">({{item.nombre}} bébés)</span><br>
					{% endfor %}
					{% endif %}
				</div>
			</div>

		</div>

		<a class="center" href="/prenom"><button class="btn btn-outline-danger btn-outline justify-content-center">Faire une autre recherche</button></a>


		<div class="logo">
            <img class=" justify-content-center" src="{{ asset('build/images/logo_prenoms.png')}} " alt="Logo.">
		{% endblock %}
